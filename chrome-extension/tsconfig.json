{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "declaration": false,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./types.d.ts"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "*.tsx",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 