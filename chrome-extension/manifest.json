{
  "manifest_version": 3,
  "name": "VisaMate Assistant",
  "version": "1.0.0",
  "description": "Your AI-powered visa application companion",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.cic.gc.ca/*",
    "https://*.homeaffairs.gov.au/*",
    "https://*.gov.uk/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "VisaMate Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.cic.gc.ca/*",
        "https://*.homeaffairs.gov.au/*",
        "https://*.gov.uk/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["helper-panel.html"],
      "matches": ["<all_urls>"]
    }
  ]
} 